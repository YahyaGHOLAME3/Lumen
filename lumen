#!/usr/bin/env python3
"""Local launcher for the Lumen CLI without requiring installation."""

from pathlib import Path
import sys

REPO_ROOT = Path(__file__).resolve().parent
if str(REPO_ROOT) not in sys.path:
    sys.path.insert(0, str(REPO_ROOT))

from lumen_src import lumen_main  # noqa: E402


def main() -> None:
    lumen_main._preprocess_cli_args()
    lumen_main.main()


if __name__ == "__main__":
    main()
